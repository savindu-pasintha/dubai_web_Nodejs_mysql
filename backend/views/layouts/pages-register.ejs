                    </div>


                </div>
            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="assets/libs/jquery/jquery.min.js"></script>
    <script src="assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="assets/libs/simplebar/simplebar.min.js"></script>
    <script src="assets/libs/node-waves/waves.min.js"></script>


    <script src="assets/js/app.js"></script>

    <!-- Data add to database
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    -->
    <script type="text/javascript">
        $(document).ready(function () {
            $("#submit_btn").click(function () {
                var e = document.getElementById("useremail").value;
                var u = document.getElementById("username").value;
                var p = document.getElementById("userpassword").value;

                var myHeaders = new Headers();
                myHeaders.append("Content-Type", "application/json");

                var raw = JSON.stringify({
                    "email": e,
                    "password": p,
                    "username": u
                });

                var requestOptions = {
                    method: 'POST',
                    headers: myHeaders,
                    body: raw,
                    redirect: 'follow'
                };

                fetch("https://api.salemalmakranicargo.net/api/register", requestOptions)
                    .then(response => response.json())
                    .then(result => {
                        alert(result.status.data_saved ? "Registerd !" : "Error !");
                        console.log(result);
                    })
                    .catch(error => console.log('error', error));
            });
        });
    </script>

</body>

