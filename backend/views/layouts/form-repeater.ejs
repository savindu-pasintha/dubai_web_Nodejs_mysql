    <script type="text/javascript">
        $(document).ready(function () {
            $("#submit_btn").click(function () {
                var t = document.getElementById("formname").value;
                var d = document.getElementById("formmessage").value;
                var l = document.getElementById("formlocation").value;
                var p = document.getElementById("formposition").value;
                var e = document.getElementById("formenddate").value;
                //var r = document.getElementById("formresponsibilities").value;
                var r = document.getElementsByClassName("responsibility");
                var responsbilityes = "";
                var q = document.getElementsByClassName("qualification");
                var qualifications = "";


                if (r.length > 0) {
                    r.forEach((item) => {
                        responsbilityes = responsbilityes + item?.value + '|+|'
                    })
                }

                if (q.length > 0) {
                    q.forEach((item) => {
                        qualifications = responsbilityes + item?.value + '|+|'
                    })
                }

                console.log(responsbilityes);

                var myHeaders = new Headers();
                myHeaders.append("Content-Type", "application/json");
                var raw = JSON.stringify({
                    "jobTitle": t,
                    "shortDescription": d,
                    "location": l,
                    "positions": p,
                    "endDate": e,
                    "resposibilities": responsbilityes,
                    "qualifications": qualifications
                });
                var requestOptions = {
                    method: 'POST',
                    headers: myHeaders,
                    body: raw,
                    redirect: 'follow'
                };
                fetch("https://api.salemalmakrani.net/api/career", requestOptions)
                    .then(response => response.json())
                    .then(result => {
                        alert(result.status.data_saved ? "Submited !" : "Error !");
                        console.log(result);
                    })
                    .catch(error => console.log('error', error));

            })
        });
